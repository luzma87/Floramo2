<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="?attr/actionBarSize"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/tropicos_search_result_list"
        android:name="com.lzm.Cajas.tropicos.TropicosSearchResultFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="LinearLayoutManager"
        tools:context="com.lzm.Cajas.tropicos.TropicosSearchResultFragment"
        tools:listitem="@layout/tropicos_search_result_row" />

    <TextView
        android:id="@+id/tropicos_search_result_empty"
        style="@style/search_no_results"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:text="@string/search_no_results" />

</LinearLayout>